package controlador;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.Socket;

public class SocketClient {
    private static final String SERVER_IP = "127.0.0.1"; // Cambia esta dirección por la del servidor
    private static final int PORT = 12345; // Puerto en el que el servidor escucha

    public static void main(String[] args) {
        try (
            Socket socket = new Socket(SERVER_IP, PORT);
            ObjectOutputStream out = new ObjectOutputStream(socket.getOutputStream());
            ObjectInputStream in = new ObjectInputStream(socket.getInputStream())
        ) {
            // Aquí va la lógica para comunicarse con el servidor
            // Puedes enviar y recibir objetos utilizando out.writeObject() e in.readObject()
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
